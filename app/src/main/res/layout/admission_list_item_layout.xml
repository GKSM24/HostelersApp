<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id = "@+id/admission_list_item_root_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id = "@+id/boarder_id_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:id = "@+id/boarder_id_text_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:textSize="18sp"
        android:text = "@string/boarder_id_heading"/>
    <TextView
        android:id = "@+id/boarder_id_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        tools:text="1234"/>
    </LinearLayout>
    <LinearLayout
        android:id = "@+id/boarder_name_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/boarder_id_details">
        <TextView
            android:id = "@+id/boarder_name_text_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:textSize="18sp"
            android:text = "@string/boarder_name_heading"/>
        <TextView
            android:id = "@+id/boarder_name_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            tools:text="ABC"/>
    </LinearLayout>

    <Button
        android:id = "@+id/show_details_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "@string/show_details_text"
        android:layout_alignParentEnd="true"
        />
</RelativeLayout>