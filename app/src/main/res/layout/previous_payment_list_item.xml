<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools = "http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id = "@+id/payment_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginEnd="16dp"
            android:layout_alignParentStart="true"
            tools:text = "dd/mm/yyyy"/>
        <TextView
            android:id = "@+id/payment_amount_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_marginEnd="16dp"
            android:layout_toEndOf="@id/payment_date"
            tools:text = "Amount"/>
        <TextView
            android:id = "@+id/payment_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginEnd="16dp"
            android:layout_toEndOf="@id/payment_amount_tv"
            tools:text = "Status"/>
        <TextView
            android:id = "@+id/pay_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_marginEnd="16dp"
            android:layout_toEndOf="@id/payment_status"
            tools:text = "message"/>
        <ImageButton
            android:id = "@+id/payment_notify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src = "@drawable/message"
            android:layout_alignParentEnd="true"
            android:background="@android:color/transparent"
            />

</RelativeLayout>
